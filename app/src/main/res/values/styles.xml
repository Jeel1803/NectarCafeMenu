<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainCardStyle" >
        <item name="android:textColor">#6F4E37 </item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="CardImageStyle" >
        <item name="android:textColor">#6F4E37</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="CardTextStyle" >
        <item name="android:textColor">#6F4E37</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="fontFamily">@font/theyperished</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="ListItemCardStyle" >
        <item name="android:textColor">#6F4E37 </item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="DetailsCardTitle">
        <item name="fontFamily">@font/remachine_font</item>
        <item name="android:textSize">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#6F4E37 </item>


    </style>

    <style name="DetailsCard">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="fontFamily">@font/gabriola</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#6F4E37 </item>

    </style>
</resources>
