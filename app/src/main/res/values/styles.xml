<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainCardStyle" >
        <item name="android:textColor">#6F4E37 </item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="CardImageStyle" >
        <item name="android:textColor">#6F4E37</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">194dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Arrow">
        <item name="android:layout_width">74dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">171dp</item>
        <item name="android:layout_marginTop">3dp</item>

    </style>

    <style name="CardTextStyle" >
        <item name="android:textColor">#6F4E37</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="fontFamily">@font/theyperished</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="ListItemCardStyle" >
        <item name="android:textColor">#6F4E37 </item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="listItemTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">25dp</item>
        <item name="fontFamily">@font/gabriola</item>
        <item name="android:textColor">#6F4E37</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="listItemText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">@font/gabriola</item>
        <item name="android:textColor">#6F4E37</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="DetailsCardTitle">
        <item name="fontFamily">@font/remachine_font</item>
        <item name="android:textSize">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#6F4E37 </item>


    </style>

    <style name="DetailsCard">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="fontFamily">@font/gabriola</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#6F4E37 </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>
</resources>
