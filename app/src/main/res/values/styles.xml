<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainCardStyle" >
        <item name="android:textColor">#F9E79F </item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="CardImageStyle" >
        <item name="android:textColor">#00FF00</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="CardTextStyle" >
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="fontFamily">@font/christmas_font</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ListItemCardStyle" >
        <item name="android:textColor">#F9E79F </item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
</resources>
