<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="4dp"
    style="@style/Theme.Cafe"
  >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_auckland"
                style="@style/MainCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickOnPlates"
                app:cardBackgroundColor="#ffffff "
                app:cardCornerRadius="50dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/Image01"
                        style="@style/CardImageStyle"
                        android:src="@drawable/on_plates" />

                    <TextView
                        style="@style/CardTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Image01"
                        android:text="ON PLATES" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                style="@style/MainCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickMilkshakes"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/Image02"
                        style="@style/CardImageStyle"
                        android:src="@drawable/milkshake" />

                    <TextView
                        style="@style/CardTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Image02"
                        android:text="MILKSHAKES" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                style="@style/MainCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickSmoothies"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/Image03"
                        style="@style/CardImageStyle"
                        android:src="@drawable/smoothie" />

                    <TextView
                        style="@style/CardTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Image03"
                        android:text="SMOOTIES" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                style="@style/MainCardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickBeverage"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">


                    <ImageView
                        android:id="@+id/Image04"
                        style="@style/CardImageStyle"
                        android:src="@drawable/beverages" />

                    <TextView
                        style="@style/CardTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Image04"
                        android:text="BEVERAGES" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>